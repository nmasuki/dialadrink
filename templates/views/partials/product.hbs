<a href="{{productUrl href}}" style="display :block; color: black;">
    <div class="featured-image" style="text-align :center ;">
        <div class="item-name"
             style="text-align:center; justify-content :center; color: black">

            <img src="{{cloudinaryUrl image width=100 height=100 crop='fill'}}" 
                data-src="{{cloudinaryUrl image width=250 height=250 crop='fill'}}" 
                title="{{{name}}}..{{truncate (cleanHtml description) 100}}"
                class="img-responsive" 
                style="margin: auto"
                itemprop="image"
                alt="{{{name}}}"/>

            <a href="{{productUrl href}}" style="font-size: 15px; color: black; ">
                <div itemprop="name" class="drinks-name">
                    {{{name}}}
                </div>
            </a>

            <span>{{quantity}}</span><br>
            <span itemscope itemprop="offers" itemtype="http://schema.org/Offer">
				<meta itemprop="priceCurrency" content="{{currency}}"/>
                {{currency}}
                {{#ifgt price offerPrice}}
                    <span>
                        <span style="font-size: 0.8em; text-decoration: line-through; color: orangered">
                            <span itemprop="price">{{formatNumber price}}</span>
                        </span>
                    <span itemprop="offerPrice">{{formatNumber offerPrice}}</span>
                    </span>
                {{else}}
                    <span itemprop="price">{{formatNumber price}}</span>
                {{/ifgt}}
			</span>
            <br>
            <div class="dropdown">
                <button class="btn btn-1" style="font-size:14px !important; padding: 0 15px;">
					<span data-qty="{{quantity}}" data-product="{{_id}}" class="add-to-cart">
					  Add to cart
					</span>
                    {{#ifgt options.length 1}}
                        <span class="dropdown">
							<i class="fa fa-angle-down"></i>
						</span>
                    {{/ifgt}}
                </button>
                {{#ifgt options.length 1}}
                    <div class="dropdown-content">
                        {{#each options }}
                            <a href="#" class="add-to-cart"
                               data-qty="{{quantity}}"
                               data-product="{{../_id}}">
                                {{quantity}} - {{currency}} {{price }}
                            </a>
                        {{/each}}
                    </div>
                {{/ifgt}}
            </div>
        </div>
    </div>
</a>
