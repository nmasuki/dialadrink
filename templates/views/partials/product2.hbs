<a href="{{productUrl href}}" title="{{name}}" style="display :block; color: black;">
	<div class="featured-image" style="text-align :center; border: 1px solid gray; boarder-radius: 2px; margin: 5px">
		<div class="item-name"
			 style="text-align:center; justify-content :center; color: black;min-height: 154px">

			<img src="{{cloudinaryUrl image crop='fit'}}" alt="{{{name}}}"
				 class="img-responsive" itemprop="image"
				 style="margin: auto; max-height: 83px;"/>

			<div class="product-details">
				<a href="{{productUrl href}}" title="{{name}}">
					<div itemprop="name" class="drinks-name"
						 style="font-size: 12px!important; color: black;white-space: nowrap; height: auto">
						{{{truncate name 15}}}
					</div>
				</a>
				<div style="font-size: 12px !important;">{{quantity}}</div>
				<div style="font-size: 12px !important;">
                    <meta itemprop="priceCurrency" content="{{currency}}"/>
                    {{currency}}
                    {{#ifgt price offerPrice}}
                        <span>
                            <span style="font-size: 0.8em; text-decoration: line-through; color: orangered">
                                <span itemprop="price">{{formatNumber price}}</span>
                            </span>
                            <span itemprop="offerPrice">{{formatNumber offerPrice}}</span>
                        </span>
                    {{else}}
                        <span itemprop="price">{{formatNumber price}}</span>
                    {{/ifgt}}
				</div>
			</div>

