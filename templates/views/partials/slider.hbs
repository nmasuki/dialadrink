}
.container .title .content form .email button:hover{
  background-color: #f40612;
}
.container .title .content form .email button a{
  text-decoration: none;
  color: white;
}


/* Netflix Carousel */
html {
  scroll-behavior: smooth;
 }
 body {
  margin: 0;
  background-color: #fff;
 }
 h1 {
  font-family: Arial;
  color: red;
  text-align: center;
 }
 .wrapper {
  display: grid;
  grid-template-columns: repeat(3, 100%);
  overflow: hidden;
  scroll-behavior: smooth;
 }
 .wrapper section {
  width: 100%;
  position: relative;
  display: grid;
  grid-template-columns: repeat(5, auto);
  margin: 20px 0;
 }
 .wrapper section .item {
  padding: 0 2px;
  transition: 250ms all;
 }
 .wrapper section .item:hover {
  margin: 0 40px;
  transform: scale(1.2);
 }
 .wrapper section a.arrow__btn {
  position: absolute;
  color: #fff;
  text-decoration: none;
  font-size: 6em;
  background: black;
  width: 80px;
  padding: 20px;
  text-align: center;
  z-index: 1;
 }
 .wrapper section a.arrow__btn:nth-of-type(1) {
  top: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(-90deg, rgba(0, 0, 0, 0) 0%, black 100%);
 }
 .wrapper section a.arrow__btn:nth-of-type(2) {
  top: 0;
  bottom: 0;
  right: 0;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0) 0%, black 100%);
 }
 @media only screen and (max-width: 600px) {
  a.arrow__btn {
  display: none;
  }
 }


 /* Movies */
.movies-container {
  display:flex;
  width:100%;
  padding:20px;
  justify-content: center;
}

.movies-container .box {
  padding: 20px;
  width:75%;
  min-height: 600px;
  background: linear-gradient(0deg, rgba(100, 0, 0, 0) 0%, white 100%);
}

.movies-container .box .photo {
  float:left;
  width:50%;
  padding:10px;
}

.movies-container .box .info {
  float:left;
  width:50%;
  padding:20px;
}

.movies-container .box .info h1 {
  text-align:left;
}

</style>

