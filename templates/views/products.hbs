<style>
    .featured-image img.img-responsive {
        min-height: 250px;
        max-height: 250px;
    }
</style>
<div class="container">
    {{#if brand}}
        <div class="row">
            {{>brand}}
        </div>
    {{/if}}
</div>

{{#if offers.length}}
    <div class="container">
        <div class="row products-grid">
            {{#each offers}}
                <div class="col-md-3 col-lg-3 col-sm-12 single" 
                    itemscope itemtype="http://schema.org/Product"
                    style="box-shadow:3px 3px 3px #CFD8DC; margin-bottom :15px;">                
                    {{>product}}
                </div>
            {{/each}}
        </div>
    </div>

    <div class="container">
        <div class="row">
            <a href="http://bit.ly/2OZfVz1">
                <img class="mobile-only"  width="100%" src="https://res.cloudinary.com/dyc0ieeyu/image/upload/c_fit,w_350/pages/WhatsApp_Image_2021-01-28_at_20.45.24_eopi7x.jpg"/>
                <img class="desktop-only" width="100%" src="https://res.cloudinary.com/dyc0ieeyu/image/upload/c_fit,w_700/pages/WhatsApp_Image_2021-01-28_at_17.13.47_d3fo7n.jpg"/>
            </a>
        </div>

        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <h1 class="home_featured_title home-title page-title">
                    {{#each page.h1s}}
                        {{#ifeq @index 0}}
                            <span class="category-name">{{{this}}}</span>
                        {{/ifeq}}
                    {{else}}
                        <span class="category-name">Popular Drinks.</span>
                    {{/each}}    
                        
                </h1>
            </div>
            <div class="col-sm-4"></div>
        </div>
        
        <div class="row products-grid">
            {{#each popular}}
                <div class="col-md-3 col-lg-3 col-sm-12 single" 
                    itemscope itemtype="http://schema.org/Product"
                    style="box-shadow:3px 3px 3px #CFD8DC; margin-bottom :15px;">                
                    {{>product}}
                </div>
            {{/each}}
        </div>

        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <h1 class="home_featured_title home-title page-title">
                    <span class="category-name">Brand Forcus.</span>   
                </h1>
            </div>
            <div class="col-sm-4"></div>
        </div>
        
        <div class="row products-grid">
            {{#each brandForcus}}
                <div class="col-md-3 col-lg-3 col-sm-12 single" 
                    itemscope itemtype="http://schema.org/Product"
                    style="box-shadow:3px 3px 3px #CFD8DC; margin-bottom :15px;">                
                    {{>product}}
                </div>
            {{/each}}
        </div>
    </div>
{{else}}
    {{#if products.length}}
        <div class="container">
            <div class="row products-grid">
                {{#each products}}
                    <div class="col-md-3 col-lg-3 col-sm-12 single" 
                        itemscope itemtype="http://schema.org/Product"
                        style="box-shadow:3px 3px 3px #CFD8DC; margin-bottom :15px;">
                        
                        {{>product}}
                    </div>
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 style="font-size: 18px;">No results found!</h2>
                    <img src="https://res.cloudinary.com/nmasuki/image/upload/c_fill/no_results.png"/>
                    <br/>
                    <a href="/">Back to Today's Offers</a>
                </div>
            </div>    
        </div>
    {{/if}}
{{/if}}