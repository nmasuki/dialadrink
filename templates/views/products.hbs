<style>
    .featured-image img.img-responsive {
        min-height: 250px;
        max-height: 250px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-12">

            {{#if brand}}
                <div class="row">
                    {{>brand }}
                </div>
            {{/if}}

            <div class="row">
                {{#each products}}
                    <div class="col-md-3 col-lg-3 single"
                         itemscope itemtype="http://schema.org/Product"
                         style="box-shadow:3px 3px 3px #CFD8DC; margin-bottom :15px ;">
                        {{>product}}
                    </div>
                {{else}}
                    <div class="col-md-12 text-center">
                        <h2 style="font-size: 18px;">No results found!</h2>
                        <img src="/images/no_results.png"/>
                        <a href="/">Back to Today's Offers</a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
