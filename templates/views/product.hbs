    "{{cloudinaryUrl this crop='fit' width='800' height='800' format='jpg' quality='auto:good'}}"{{/each}}
  ],
  "description": "{{#if description}}{{{truncate (cleanHtml description) 300 '...'}}}{{else}}{{{name}}} - Premium quality product available for delivery in Kenya.{{/if}}",
  "sku": "{{_id}}",
  "mpn": "{{href}}",
  "gtin": "{{_id}}",
  {{#if brand.name}}
  "brand": {
    "@type": "Brand",
    "name": "{{{cleanHtml brand.name}}}"
  },
  {{else}}
  "brand": {
    "@type": "Brand",
    "name": "Dial A Drink Kenya"
  },
  {{/if}}
  {{#if category.name}}
  "category": "{{{category.name}}}",
  {{/if}}
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{{#if averageRatings}}{{averageRatings}}{{else}}4.5{{/if}}",
    "bestRating": "5",
    "worstRating": "1",
    "ratingCount": "{{#if ratingCount}}{{#ifgt ratingCount 0}}{{ratingCount}}{{else}}5{{/ifgt}}{{else}}5{{/if}}"
  },
  "offers": {
    "@type": "Offer",
    "url": "https://www.dialadrinkkenya.com/{{href}}",
    "priceCurrency": "{{#if currency}}{{currency}}{{else}}KES{{/if}}",
    "price": "{{#if offerPrice}}{{offerPrice}}{{else}}{{#if price}}{{price}}{{else}}1000{{/if}}{{/if}}",
    {{#if percentOffer}}
    "priceSpecification": {
      "@type": "PriceSpecification",
      "price": "{{offerPrice}}",
      "priceCurrency": "{{#if currency}}{{currency}}{{else}}KES{{/if}}"
    },
