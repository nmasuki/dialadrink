<link rel="preload" href='https://fonts.googleapis.com/css?family=Ubuntu+Mono' rel='stylesheet' type='text/css'>

{{#with product}}
    <div class="container" id="product-section"
         data-product="{{_id}}"
         itemscope itemtype="http://schema.org/Product">
        <div class="row">
            <div class="col-md-4">
                <figure class="zoom" style="background-image: url({{cloudinaryUrl image crop='fit'}})">
                    <img itemprop="image"
                        src="{{cloudinaryUrl image width=100 height=100  crop='fit'}}" 
                        data-src="{{cloudinaryUrl image crop='fit'}}" alt="{{{name}}}"
                        class="image-responsive" style="min-height: 380px; max-height: 400px; margin: 0 auto" />
                </figure>
                <div class="row product-thumbnails">
                    {{#each altImages}}
                        <div class="col-md-1 col-xs-1 col-sm-1">
                            <div class="thumbnail">
                                <img alt="{{{../name}}}"
                                     data-img="{{cloudinaryUrl this crop='fit'}}"
                                     src="{{cloudinaryUrl this width=24 height=24 crop='fit'}}"/>
                            </div>
                        </div>
                    {{else}}
                        <div class="col-md-1 col-xs-1 col-sm-1">
                            <div class="thumbnail">
                                <img height="24" width="24" data-img="{{cloudinaryUrl image crop='fit'}}"
                                     src="{{cloudinaryUrl image  width=24 height=24 crop='fit'}}"/>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6">

                <div class="row">
                    <div class="col-md-12">
                        <h1 style="margin: 0" itemprop="name">{{{name}}}</h1>
                    </div>
                </div><!-- end row-->

                {{#if brand.name}}
                    <div class="row" style="padding-bottom: 3px;">
                        <div class="col-md-12">
                            <p class="description">
                                By <a href="/{{cleanId brand.name}}">{{brand.name}}</a>
                            </p>
                        </div>
                    </div><!-- end row -->
                {{/if}}
                
                <div class="row">
                    <div class="col-md-5 bottom-rule">
                        <h2 style="margin-top:5px">
                            {{currency}}
                            {{#ifgt price offerPrice}}
                                <span>
                                    <span style="font-size: 0.8em; text-decoration: line-through; color: orangered">
                                        <span itemprop="price" id="product-offerPrice">{{formatNumber price}}</span>
                                    </span>
                                    <span itemprop="offerPrice" class="product-price" id="product-price">
                                        {{formatNumber offerPrice}}
                                    </span>
                                </span>
                            {{else}}
                                <span class="product-price" id="product-price">{{formatNumber price}}</span>
                            {{/ifgt}}
                        </h2>
                    </div>

                    {{#ifgt options.length 1}}
                        <div class="col-md-2" style="padding-top: 4px;">Option:</div>
                        <div class="col-md-3">
                            <select id="change-quantity" class="quantity" style="width: 134px; height: 40px;">
                                {{#each options}}
                                    <option data-offer="{{offerPrice}}" value="{{price}}"
                                            {{#ifeq ../price price}}selected{{/ifeq}}>
                                        {{quantity}}
                                    </option>
                                {{/each}}
                            </select>
                        </div>
                    {{else}}
                        <div class="col-md-5">
                            <h2 style="margin: 5px 0 0 0;" itemprop="name">{{{quantity}}}</h1>
                        </div>
                    {{/ifgt}}
                </div>

                                <div class="row">
                    <div class="col-md-4 text-left">
                        {{#if inStock}}
                            <span class="monospaced label label-success">In Stock</span>
                        {{else}}
                            <span class="monospaced label label-warning">Out of Stock</span>
                        {{/if}}
                    </div>
                </div><!-- end row -->

                <div class="row add-to-cart-wrapper">
                    <div class="col-md-5 product-qty">
						<span id="pieces-plus" class="pieces-plus btn btn-default btn-lg btn-qty" style="width: 46px;">
						  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
						</span>
                        <input id="pieces" class="pieces btn btn-default btn-lg btn-qty" style="width: 48px" value="1"/>
                        <span id="pieces-minus" class="pieces-minus btn btn-default btn-lg btn-qty"
                              style="width: 46px;">
							<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
						</span>
                    </div>
                    <div class="col-md-5" style="margin-top: 5px">
                        {{#if inStock}}
                            <button data-qty="{{quantity}}" data-product="{{_id}}" 
                                class="btn btn-lg btn-brand btn-full-width add-to-cart">
                                Add to Cart
                            </button>
                        {{/if}}
                        <!--<button onclick="window.location='/checkout'" data-product="{{_id}}" style="width: 121px;"-->
                        <!--class="btn btn-lg btn-brand btn-full-width">-->
                        <!--Checkout-->
                        <!--</button>-->
                    </div>
                </div><!-- end row -->
                
                <div class="row">
                    <div class="col-md-12">
                        {{#each tags}}
                            <span class="label label-primary">
                                <a href="/{{{cleanId this}}}">{{{this}}}</a>
                            </span>
                        {{/each}}
                        {{#if no}}
                            <span class="monospaced">No.{{no}}</span>
                        {{/if}}
                    </div>
                </div><!-- end row -->

                <div class="row">
                    <div class="col-md-12 bottom-rule top-10">
                        {{#if ../page.canonical}}	
                            <!-- Facebook -->
                            <a href="http://www.facebook.com/sharer.php?u={{../page.canonical}}" target="_blank">
                                <img style="width: 42px;" src="https://simplesharebuttons.com/images/somacro/facebook.png" alt="Facebook" />
                            </a>
                            
                            <!-- Twitter -->
                            <a href="https://twitter.com/share?url={{../page.canonical}}&amp;text=Simple%20Share%20Buttons&amp;hashtags=simplesharebuttons" target="_blank">
                                <img style="width: 42px;" src="https://simplesharebuttons.com/images/somacro/twitter.png" alt="Twitter" />
                            </a>
                            
                            <!-- Google+ -->
                            <a href="https://plus.google.com/share?url={{../page.canonical}}" target="_blank">
                                <img style="width: 42px;" src="https://simplesharebuttons.com/images/somacro/google.png" alt="Google" />
                            </a>	
                                                
                            <!-- LinkedIn -->
                            <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url={{../page.canonical}}" target="_blank">
                                <img style="width: 42px;" src="https://simplesharebuttons.com/images/somacro/linkedin.png" alt="LinkedIn" />
                            </a>
                            
                            <!-- Pinterest
                            <a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());">
                                <img style="width: 42px;" src="https://simplesharebuttons.com/images/somacro/pinterest.png" alt="Pinterest" />
                            </a>
                             -->
                             
                        {{/if}}
                    </div>
                </div>
                <!-- end row -->

                <div class="row">
                    {{#if ../contactNumber}}
                        <div class="col-md-12 top-10">
                            <p>
                                <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
                                To order by telephone, please call
                                <a href="tel:{{../contactNumber}}">{{../contactNumber}}</a>
                            </p>
                        </div>
                    {{/if}}
                </div><!-- end row -->
            </div>
            <div class="col-md-12 more-details">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    {{#if description}}
                        <li role="presentation" class="active">
                            <a href="#description"
                               aria-controls="description"
                               role="tab"
                               data-toggle="tab">Description</a>
                        </li>
                    {{/if}}
                    {{#if features}}
                        <li role="presentation">
                            <a href="#features" aria-controls="features" role="tab" data-toggle="tab">Features</a>
                        </li>
                    {{/if}}
                    <li role="presentation">
                        <a href="#reviews" aria-controls="reviews" role="tab" data-toggle="tab">Reviews</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    {{#if description}}
                        <div role="tabpanel" class="tab-pane active" id="description">
                            {{{description}}}
                        </div>
                    {{/if}}
                    {{#if features}}
                        <div role="tabpanel" class="tab-pane top-10" id="features">
                            <ul>
                                {{#each feature}}
                                    <li>{{{this}}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    {{/if}}
                        <div role="tabpanel" class="tab-pane" id="reviews">
                            <div class="row"
                                itemprop="aggregateRating"
                                itemscope="" itemtype="http://schema.org/AggregateRating">
                                <div class="col-md-12 {{#if ../userRating}}rated{{else}}unrated{{/if}}">
                                    <span class="glyphicon glyphicon-star{{#ifgte 0 avgRatings}}-empty{{/ifgte}}"
                                        aria-hidden="true">
                                    </span>
                                    <span class="glyphicon glyphicon-star{{#ifgte 1 avgRatings}}-empty{{/ifgte}}"
                                        aria-hidden="true">
                                    </span>
                                    <span class="glyphicon glyphicon-star{{#ifgte 2 avgRatings}}-empty{{/ifgte}}"
                                        aria-hidden="true">
                                    </span>
                                    <span class="glyphicon glyphicon-star{{#ifgte 3 avgRatings}}-empty{{/ifgte}}"
                                        aria-hidden="true">
                                    </span>
                                    <span class="glyphicon glyphicon-star{{#ifgte 4 avgRatings}}-empty{{/ifgte}}"
                                        aria-hidden="true">
                                    </span>

                                    <span itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
                                        <span class="label label-success">
                                            <span itemprop="reviewCount">{{formatNumber avgRatings 1}}</span> *
                                        </span>&nbsp;

                                        {{#if reviewCount}}
                                            <span itemprop="reviewCount" class="monospaced">{{ratings.length}}</span> reviews.
                                        {{/if}}

                                        {{#unless ../userRating}}
                                            <span class="monospaced right">Rate {{truncate name 25}}!</span>
                                        {{/unless}}
                                    </span>

                                </div>
                            </div><!-- end row -->
                            
                            {{#if reviews}}{{>productReview}}{{/if}}
                        </div>
                </div>
            </div>
            <div style="border-top: 1px solid lightgray;" class="similar-products col-md-12">
            <h2 style="font-size: 15px;">You may also like..</h2>
                {{#each ../similar}}
                    <div class="col-md-2">
                        {{>product2}}
                    </div>
                {{/each}}
            </div>
        </div><!-- end row -->
        <div class="row">

        </div>
    </div><!-- end container -->
<script type="application/ld+json">
{
  "@context": "http://schema.org/",
  "@type": "Product",
  "name": "{{{name}}}",
  "image": [
    "{{cloudinaryUrl image crop='fit'}}"
   ],
  "description": "{{{truncate (cleanHtml description) 500 ' '}}}",
  "brand": {
    "@type": "Thing",
    "name": "{{{brand.name}}}"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{{avgRatings}}",
    "reviewCount": "{{reviewCount}}"
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "KES",
    "price": "{{price}}",
    "priceValidUntil": "2020-12-31",
    "itemCondition": "http://schema.org/UsedCondition",
    "availability": "http://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "Dial A Drink Kenya"
    }
  }
}
</script>

{{/with}}

