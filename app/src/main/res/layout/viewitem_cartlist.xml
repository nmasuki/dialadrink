<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_medium">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_width_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/grey_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_cartlist"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            fresco:placeholderImage="@drawable/placeholder_image_wine" />

        <LinearLayout
            android:id="@+id/layout_item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text_cartlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denim Shirt"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text_cartlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slim fit, cotton"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/delivery_msg_text_cartlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:minHeight="27dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. " />

            <TextView
                android:id="@+id/price_text_cartlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Rs. 8,999"
                android:textColor="#4CAF50"
                android:textSize="@dimen/text_size_xmedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:text="Size: 41"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_layout_cartlist_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:weightSum="5"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="2"
                android:layout_height="27dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/addImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/border_shape_gray"
                    android:padding="2dp"
                    android:src="@drawable/plus" />
            </LinearLayout>


            <TextView
                android:id="@+id/qty_text_cartlist_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:text="1"
                android:textSize="@dimen/text_size_xmedium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="2"
                android:layout_height="27dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/removeImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/border_shape_gray"
                    android:padding="2dp"
                    android:src="@drawable/minus" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

